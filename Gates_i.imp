IMPLEMENTATION Gates_i
REFINES Gates
VALUES GATE = 0..2

CONCRETE_VARIABLES positioni
    
INVARIANT
    positioni : GATE --> POSITION &
    position = positioni

INITIALISATION positioni := GATE * {closed}

OPERATIONS
  open_gate(gg) =
    BEGIN
        positioni(gg) := open
    END;

  close_gate(gg) =
    BEGIN
        positioni(gg) := closed
    END

 END