IMPLEMENTATION Suggestion_i
REFINES Suggestion
VALUES SUGGESTION = 0..3

CONCRETE_VARIABLES suggestionsi

INVARIANT
    suggestionsi : SUGGESTION --> BOOL

INITIALISATION suggestionsi := SUGGESTION*{FALSE}

OPERATIONS
  add_suggestion(suggestion) =
    BEGIN
        suggestionsi(suggestion) := TRUE
    END;


  remove_suggestion(suggestion) =
    BEGIN
        suggestionsi(suggestion) := FALSE
    END

 END