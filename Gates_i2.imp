IMPLEMENTATION Gates_i2
REFINES Gates
    
VALUES
    GATE = 0..3

CONCRETE_VARIABLES position

INITIALISATION position := GATE * {closed}

OPERATIONS
  open_gate(gg) =
    BEGIN
        position(gg) := open
    END;

  close_gate(gg) =
    BEGIN
        position(gg) := closed
    END

 END